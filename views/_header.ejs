<header id="layout-header">
    <nav>
        <div id = "mini-logo"> 
            <p>
                <a href="/">
                    Hi Coder Wellcome To Coders Connect
                </a>
            </p>
        </div>

        <div class="auth-links">
            
            <ul>
                <% if (locals.user) { %>
                <li>
                    <a href="/user/profile/<%= locals.user.id %> "> <%= user.name %> </a>
                </li>
                <li>
                    <a href="/"> Home </a>
                </li>
                <li>
                    <a href="/user/signout"> Sign out </a>
                </li>
                <% } else { %>
                <li>
                    <a href="/user/signin"> Sign in</a>
                </li>
                <li>
                    <a href="/user/signup"> Sign up</a>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>